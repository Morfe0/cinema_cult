<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name = "cinema_cult" transaction-type = "RESOURCE_LOCAL">
	
		<class>com.azienda.webapp.entity.Attore</class>
		<class>com.azienda.webapp.entity.Commento</class>
		<class>com.azienda.webapp.entity.Film</class>
		<class>com.azienda.webapp.entity.Prenotazione</class>
		<class>com.azienda.webapp.entity.Regista</class>
		<class>com.azienda.webapp.entity.Ruolo</class>
		<class>com.azienda.webapp.entity.Sala</class>
		<class>com.azienda.webapp.entity.Spettacolo</class>
		<class>com.azienda.webapp.entity.Utente</class>
		
		<properties>
            <property name = "javax.persistence.jdbc.Driver" value = "com.mysql.jdbc.Driver"/>
            <property name = "javax.persistence.jdbc.url" value = "jdbc:mysql://localhost:3306/db_cinema_cult"/>
            <property name = "javax.persistence.jdbc.user" value = "root"/>
            <property name = "javax.persistence.jdbc.password" value = "root"/>
            <property name = "eclipselink.ddl-generation" value = "none"/>
        </properties>
	
	</persistence-unit>
</persistence>